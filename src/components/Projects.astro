---
import GithubIcon from "@/assets/icons/GithubIcon.astro";
import WebIcon from "@/assets/icons/WebIcon.astro";

const projects = [
  {
    title: "CarePlan - medical planner solution",
    description:
      "Application de gestion de rendez-vous médicaux avec système d'authentification, gestion des rôles utilisateur et interface dédiée.",
    image: "/careplan.webp",
    github: "https://github.com/WildCodeSchool-CDA-FT-2025-03/CDA-Projet-2-Team-1",
    website: "",
  },
  {
    title: "Hive - home media center",
    description: "Application web media center communautaire",
    image: "/hive.webp",
    github: "https://github.com/WildCodeSchool-CDA-FT-2025-03/projet1_cody",
    website: "",
  },
  {
    title: "Taxi Loire Valley Services",
    description: `Site vitrine "vanilla JS/CSS" pour l'entreprise Loire Valley Services`,
    image: "/taxilvs.webp",
    github: "",
    website: "https://taxiloirevalleyservices.com",
  },
  {
    title: "DevMX, le blog",
    description:
      "Blog privé pour l'équipe de développement du même nom, avec un système d'authentification, upload de fichiers, gestion de compte et interface dédiée aux administrateurs.",
    image: "/devmx.webp",
    github: "https://github.com/Yiroma/Blog-DevMX",
    website: "",
  },
];
---

<section
  id="projects"
  class="mx-auto flex max-w-7xl flex-col gap-4 border-b border-base-content/20 pb-12 md:gap-8 lg:gap-12"
>
  <h2 class="text-4xl font-bold">Mes projets</h2>
  <div class="mx-auto grid max-w-7xl grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-12">
    {
      projects.map((project) => (
        <div class="card w-full bg-base-100 shadow-sm">
          <figure>
            <img src={project.image} alt={project.title} class="w-full" />
          </figure>
          <div class="card-body">
            <h3 class="card-title">{project.title}</h3>
            <p>{project.description}</p>
            <div class="card-actions justify-end">
              {project.github && (
                <a
                  class="btn btn-outline btn-primary"
                  href={project.github}
                  aria-label="Voir le projet sur Github"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <GithubIcon />
                </a>
              )}
              {project.website && (
                <a
                  class="btn btn-primary"
                  href={project.website}
                  aria-label="Voir le site web"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <WebIcon />
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <a
    href="https://github.com/Yiroma"
    aria-label="Voir plus de projets sur Github"
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-block btn-neutral"
  >
    Plus de projets sur Github
    <GithubIcon />
  </a>
</section>
