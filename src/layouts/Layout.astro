---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&family=Space+Grotesk:wght@300..700&display=swap"
    />

    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Portfolio de Romaric Yi, Concepteur Développeur d'Applications / Développeur Full Stack"
    />
    <title>Yiroma - Portfolio</title>
  </head>
  <body class="flex h-screen flex-col">
    <Header class="pointer-events-none" />
    <main class="flex-1 bg-base-100 pt-12 pb-12 md:pt-24 md:pb-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
