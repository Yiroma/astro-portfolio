---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = {
  title: string;
};

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cascadia+Code:ital,wght@0,200..700;1,200..700&family=Onest:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Portfolio de Romaric Yi, Concepteur Développeur d'Applications / Développeur Full Stack"
    />
    <title>{title}</title>
  </head>
  <body class="flex h-screen flex-col">
    <Header class="pointer-events-none" />
    <main
      class="container mx-auto flex flex-1 flex-col gap-8 bg-base-100 pt-12 pb-12 md:gap-12 md:pt-24 md:pb-6 lg:gap-14"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
