---
import Layout from "@/layouts/Layout.astro";
// Components
import Home from "@/components/Home.astro";
import LetterGlitch from "@/components/react/LetterGlitch";
import SkillsBar from "@/components/react/SkillsBar";
import SkillsSection from "@/components/SkillsSection.astro";
// Styles
import "../styles/global.css";
---

<Layout
  title="Portfolio de Romaric Yi, Concepteur Développeur d'Applications, Développeur Full Stack à Orléans"
>
  <Home />
  <SkillsBar client:visible />
  <div class="flex flex-col items-center gap-8 lg:flex-row">
    <SkillsSection />
    <div class="flex h-[292px] w-full justify-center pt-3 md:pt-9 lg:w-1/2">
      <LetterGlitch client:load />
    </div>
  </div>
</Layout>
